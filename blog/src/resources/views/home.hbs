<div class="mt-4">
  <h1 class="text-center fw-bold">Danh sách khóa học</h1>
  <div class="row">
    <div class="row row-cols-1 row-cols-md-4 g-4">
      {{#each courses}}
        <div class="col">
          <div class="card h-100">
            <a href="/courses/{{this.slug}}">
              <img src="{{this.thumbnail}}" class="card-img-top" />
            </a>
            <div class="card-body">
              <a href="/courses/{{this.slug}}" class="text-decoration-none text-dark">
                <h5 class="card-title fw-bold">{{this.name}}</h5>
              </a>
              <p class="card-text">{{this.description}}</p>
              <a href="#" class="btn btn-primary">Mua khóa học</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>